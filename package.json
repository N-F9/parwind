{
	"scripts": {
		"format": "npx prettier --write .",
		"clean": "rm -rf dist .cache .parcel-cache",
		"start": "npm run clean && parcel src/*.{html,pug} src/**/*.{html,pug}",
		"build": "npm run clean && parcel build src/*.{html,pug} src/**/*.{html,pug}",
		"update": "ncu -u && npm update"
	},
	"devDependencies": {
		"@parcel/packager-raw-url": "^2.7.0",
		"@parcel/transformer-pug": "^2.7.0",
		"@parcel/transformer-sass": "^2.7.0",
		"@parcel/transformer-webmanifest": "^2.7.0",
		"@prettier/plugin-pug": "^2.2.0",
		"@types/node": "^18.7.14",
		"parcel": "^2.7.0",
		"postcss": "^8.4.16",
		"prettier": "^2.7.1",
		"tailwindcss": "^3.1.8"
	}
}
